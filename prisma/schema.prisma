// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type CurrentTopic {
  id              String
  level           String
}

enum Level {
  NEWBIE
  INTERMEDIATE
  ADVANCED
}

enum Roles {
  MEMBER
  ADMIN
}

model User {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  password        String
  country         String
  photo           String
  completedTopic  String[]
  currentTopic    CurrentTopic
  levelTarget     Level
  levelCurrent    Level
  levelOld        Level
  createdAt       DateTime? @default(now())
  createdBy       String?
  updatedAt       DateTime?
  updatedBy       String?
  roles           Roles
}

model Vocabulary {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  topic           Topic   @relation(fields: [topicId], references: [id])
  topicId         String  @db.ObjectId
}

enum LevelQuestion {
  Easy
  Medium
  Hard
}

model Questions {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  topicId         String  @db.ObjectId
  topic           Topic   @relation(fields: [topicId], references: [id])
  level           LevelQuestion
}

model Topic {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  vocabulary      Vocabulary[]
  question        Questions[]
}


